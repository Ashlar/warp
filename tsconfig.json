{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@cache": ["cache/index"],
      "@client": ["client/index"],
      "@core": ["core/index"],
      "@legacy": ["legacy/index"],
      "@plugins": ["plugins/index"],
      "@logging": ["logging/index"],
      "@smartweave": ["index"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "src/_scripts"]
}
