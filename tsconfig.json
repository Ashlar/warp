{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@smartweave/cache": ["cache/index"],
      "@smartweave/contract": ["contract/index"],
      "@smartweave/core": ["core/index"],
      "@smartweave/legacy": ["legacy/index"],
      "@smartweave/plugins": ["plugins/index"],
      "@smartweave/logging": ["logging/index"],
      "@smartweave/utils": ["utils/index"],
      "@smartweave": ["index"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "_scripts"
  ]
}
